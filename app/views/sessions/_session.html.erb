<div id="<%= dom_id session %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Weight:</strong>
    <%= session.weight %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Reps:</strong>
    <%= session.reps %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Exercise:</strong>
    <%= session.exercise_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this session", session, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this session', edit_session_path(session), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
