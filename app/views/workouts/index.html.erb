<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="d-flex justify-content-between mb-5">
    <h1 class="font-bold text-4xl ms-3 mt-3">Workouts</h1>
    <%= link_to 'Create workout', new_workout_path, class: "btn btn-primary rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium me-3 mt-3" %>
  </div>

  <div id="workouts" class="min-w-full m-3">
    <%= render @workouts %>
  </div>
</div>
