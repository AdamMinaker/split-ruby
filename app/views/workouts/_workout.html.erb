<div id="<%= dom_id workout %>">
  <div class="d-flex justify-content-between">
    <h2><%= workout.name %></h2>
    <% if action_name != "show" %>
      <div>
        <%= link_to "View", workout, class: "btn btn-sm btn-primary" %>
        <%= link_to 'Edit', edit_workout_path(workout), class: "btn btn-sm btn-primary" %>
      </div>
    <% end %>
  </div>
  <% if action_name == "show" %>
    <p class="ms-2"><%= workout.description %></p>
    <h4>Exercises:</h4>
    <div class="ms-2">
      <% @exercises.each do |exercise| %>
      <p><%= exercise.name %></p>
      <%end%>
    </div>
  <% end %>
  <hr class="mt-2">
</div>
