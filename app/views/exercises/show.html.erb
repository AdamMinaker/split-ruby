<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @exercise %>

    <div class="inline-block d-flex ml-2">
      <%= link_to 'Edit', edit_exercise_path(@exercise), class: "btn btn-sm btn-outline-primary mb-1 me-1" %>
      <%= button_to 'Delete', exercise_path(@exercise), method: :delete, class: "btn btn-sm btn-outline-primary" %>
    </div>
  </div>
</div>
